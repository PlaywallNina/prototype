<%= form_for ['admin', @question] do |f| %>
  <div class='form-group'>
    <%= f.label :text %>
    <%= f.text_field :text %>
  </div>

  <%= f.fields_for :answers do |ff| %>
    <div class='form-group'>
      <%= ff.label :order %>
      <%= ff.text_field :order %>
    </div>
    <div class='form-group'>
      <%= ff.label :picture %>
      <%= ff.text_field :picture %>
    </div>
    <div class='form-group'>
      <%= ff.label :title %>
      <%= ff.text_field :title %>
    </div>
  <% end %>
    <div class='form-group'>
    <%= f.submit :save, class: 'button' %>
  </div>
<% end %>
