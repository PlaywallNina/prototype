<%= form_for ['admin', @question] do |f| %>
  <%= f.label :text %>
  <%= f.text_field :text %>
  <br />

  <% for i in 1..4 %>
  <p>Question <%= i %>:
  <% f.fields_for @question.answers[i] do |answer_f| %>
    <%= answer_f.label :order %>
    <%= answer_f.text_field :order %>

    <%= answer_f.label :picture %>
    <%= answer_f.text_field :picture %>

    <%= answer_f.label :title %>
    <%= answer_f.text_field :title %>
    <br />
  <% end %>
  <%= f.submit :save %>
<% end %>
<% end %>
