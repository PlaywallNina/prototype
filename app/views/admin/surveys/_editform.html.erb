<%= form_for ['admin', @survey] do |f| %>
  <div class='form-group'>
    <%= f.label :title, 'Question Text' %>
    <%= f.text_field :title, { placeholder: 'The purpose of this survey' } %>
  </div>

  <%= f.fields_for :questions do |ff| %>
      <div class='form-card'>
        <h2>Questions</h2>
        <div class="form-group">
          <%= ff.label :question1, 'Question 1' %>
          <%= ff.collection_select :question1, @questions.all, :id, :text, selected: @current_first_question %>
        </div>
        <div class="form-group">
          <%= ff.label :question2, 'Question 2' %>
          <%= ff.collection_select :question2, @questions.all, :id, :text, selected: @current_second_question %>
        </div>
        <div class="form-group">
          <%= ff.label :question3, 'Question 3' %>
          <%= ff.collection_select :question3, @questions.all, :id, :text, selected: @current_third_question %>
        </div>
        <div class="form-group">
          <%= ff.label :question4, 'Question 4' %>
          <%= ff.collection_select :question4, @questions.all, :id, :text, selected: @current_fourth_question %>
        </div>
        <div class="form-group">
          <%= ff.label :question5, 'Question 5' %>
          <%= ff.collection_select :question5, @questions.all, :id, :text, selected: @current_fifth_question %>
        </div>
      </div>
    </div>

  <% end %>
  <div class='form-group'>
    <%= f.submit :save, class: 'button' %>
  </div>
<% end %>
